<header class="p-3 bg-dark text-white mb-5">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        {% for hLink in headerLinks %}
          <li>
            <a href="{{ path(hLink.link) }}" class="nav-link px-2 text-white">{{ hLink.name }}</a>
          </li>
        {% endfor %}
      </ul>

      <div class="text-end">
        {% if is_granted('IS_ANONYMOUS') %}
          <a href="{{ path('app_login') }}" class="btn btn-outline-light me-2">Login</a>
          <a href="{{ path('app_register') }}" class="btn btn-primary">Sign-up</a>
        {% endif %}
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
          <a href="{{ path('app_login') }}" class="text-light text-decoration-none me-2">
            {{ app.user.firstName|default(app.user.email) }}
          </a>
          <a href="{{ path('app_logout') }}" class="btn btn-outline-light">Sign out</a>
        {% endif %}
      </div>
    </div>
  </div>
</header>