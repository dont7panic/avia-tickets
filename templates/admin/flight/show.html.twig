{% extends 'admin/base_admin.html.twig' %}

{% block title %}Flight{% endblock %}

{% block body %}
  <h1>Flight</h1>

  <table class="table">
    <tbody>
    <tr>
      <th>Id</th>
      <td>{{ flight.id }}</td>
    </tr>
    <tr>
      <th>AirportFrom</th>
      <td>{{ flight.airportFrom }}</td>
    </tr>
    <tr>
      <th>AirportTo</th>
      <td>{{ flight.airportTo }}</td>
    </tr>
    <tr>
      <th>Plane</th>
      <td>{{ flight.plane }}</td>
    </tr>
    <tr>
      <th>DepartsAt</th>
      <td>{{ flight.departsAt ? flight.departsAt|date('Y-m-d H:i:s') : '' }}</td>
    </tr>
    <tr>
      <th>ArrivesAt</th>
      <td>{{ flight.arrivesAt ? flight.arrivesAt|date('Y-m-d H:i:s') : '' }}</td>
    </tr>
    <tr>
      <th>CreatedAt</th>
      <td>{{ flight.createdAt ? flight.createdAt|date('Y-m-d H:i:s') : '' }}</td>
    </tr>
    <tr>
      <th>UpdatedAt</th>
      <td>{{ flight.updatedAt ? flight.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
    </tr>
    </tbody>
  </table>

  <a href="{{ path('admin_flight_index') }}">back to list</a>

  <a href="{{ path('admin_flight_edit', {'id': flight.id}) }}">edit</a>

  {{ include('admin/flight/_delete_form.html.twig') }}
{% endblock %}